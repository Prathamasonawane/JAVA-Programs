class Pattern1
{
  public static void main(String arg[])
   {
     int k=1;
     for(int i=1;i<=5;i++)
      {
        for(int j=1;j<=i;j++)
         {
           System.out.print(k++%2);
         }
        System.out.println();
      }
   }
}

/*
Output:
bcs@PRATHAMA:~$ javac pattern1.java
bcs@PRATHAMA:~$ java Pattern1
1
01
010
1010
10101
*/
